<Window x:Class="HowTo_DrawLineBetweenControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HowTo_DrawLineBetweenControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Grid x:Name="TheGridParent">
        <Grid x:Name="TheGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Bottom">
                <Button Click="B_Click" x:Name="TA1" VerticalAlignment="Center" Content="A" Width="60" Height="40"/>
                <Button Click="B_Click" x:Name="TB1" VerticalAlignment="Center" Content="B" Width="60" Height="40" Margin="0,20"/>

            </StackPanel>
            <StackPanel VerticalAlignment="Top" Grid.Column="1">
                <Button Click="B_Click" x:Name="TA2" VerticalAlignment="Center" Content="A" Width="60" Height="40"/>
                <Button Click="B_Click" x:Name="TB2" VerticalAlignment="Center" Content="B" Width="60" Height="40" Margin="0,20"/>
                <Button Click="B_Click" x:Name="TB3" VerticalAlignment="Center" Content="C" Width="60" Height="40" Margin="0,20"/>
                <Button Click="B_Click" x:Name="TB4" VerticalAlignment="Center" Content="D" Width="60" Height="40" Margin="0,20"/>
                <Button Click="B_Click" x:Name="TB5" VerticalAlignment="Center" Content="E" Width="60" Height="40" Margin="0,20"/>
                <Button Click="B_Click" x:Name="TB6" VerticalAlignment="Center" Content="F" Width="60" Height="40" Margin="0,20"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
